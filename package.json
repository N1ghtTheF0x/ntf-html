{
  "name": "@ntf/html",
  "version": "0.0.0",
  "description": "platform-independent HTML library",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "test": "tsx --tsconfig tsconfig.test.json test.ts",
    "build": "pnpm run build:prod --sourcemap",
    "build:prod": "tsup source/index.ts --dts --format esm,cjs --clean",
    "prepublishOnly": "npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/N1ghtTheF0x/ntf-html.git"
  },
  "keywords": [
    "esm",
    "cjs",
    "nodejs",
    "browser",
    "html",
    "dom"
  ],
  "author": "N1ghtTheF0x",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/N1ghtTheF0x/ntf-html/issues"
  },
  "homepage": "https://github.com/N1ghtTheF0x/ntf-html#readme",
  "devDependencies": {
    "express": "latest",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "latest"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
