{
  "name": "@ntf/html",
  "version": "0.0.0",
  "description": "platform-independent HTML library",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "test": "tsx --tsconfig ./tests/nodejs/tsconfig.json ./tests/nodejs/test.cts",
    "build": "pnpm run build:prod --sourcemap",
    "build:prod": "tsup",
    "prepublishOnly": "npm run build:prod",
    "gen-mimetype": "node ./scripts/mimetype.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/N1ghtTheF0x/ntf-html.git"
  },
  "keywords": [
    "esm",
    "cjs",
    "nodejs",
    "browser",
    "html",
    "dom"
  ],
  "author": "N1ghtTheF0x",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/N1ghtTheF0x/ntf-html/issues"
  },
  "homepage": "https://github.com/N1ghtTheF0x/ntf-html#readme",
  "devDependencies": {
    "express": "latest",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "latest",
    "@types/node": "latest"
  }
}
